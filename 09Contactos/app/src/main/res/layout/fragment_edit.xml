<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    tools:context=".Edit">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre" />

            <EditText
                android:id="@+id/fec_tv_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre de usuario" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="Apellido" />

            <EditText
                android:id="@+id/fec_tv_apellido_paterno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellido paterno" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Apellido Materno" />

            <EditText
                android:id="@+id/fec_tv_apellido_materno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellido materno" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Telefono" />

            <EditText
                android:id="@+id/fec_tv_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Teléfono" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Email" />

            <EditText
                android:id="@+id/fec_tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Calle" />

            <EditText
                android:id="@+id/fec_tv_calle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Calle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Colonia" />

            <EditText
                android:id="@+id/fec_tv_colonia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Colonia" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Número de casa" />

            <EditText
                android:id="@+id/fec_tv_numero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número de casa" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Ciudad" />

            <EditText
                android:id="@+id/fec_tv_ciudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ciudad" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Estado" />

            <EditText
                android:id="@+id/fec_tv_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Estado" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Estado Civil" />

            <EditText
                android:id="@+id/fec_tv_estado_civil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Estado Civil" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Enfermedades" />

            <EditText
                android:id="@+id/fec_tv_enfermedades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enfermedades" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Puesto" />

            <EditText
                android:id="@+id/fec_tv_puesto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Puesto en la empresa" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nacionalidad" />

            <EditText
                android:id="@+id/fec_tv_nacionalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nacionalidad" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Número de nómina" />

            <EditText
                android:id="@+id/fec_tv_numero_nomina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="#### ### ####" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="CURP" />

            <EditText
                android:id="@+id/fec_tv_cupr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="AAAA####AA#AAAA" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/fec_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Guardar" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>